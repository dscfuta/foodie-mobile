<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    
    <mobile.dscfuta.foodie.views.BoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="@color/dark_title"
            tools:text="Cheese Burger"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/recipe_title"/>
    <mobile.dscfuta.foodie.views.NormalTextView
            android:id="@+id/recipe_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_title"
            tools:text="Beef, Veggies,Chiil"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/recipe_title"/>
    <mobile.dscfuta.foodie.views.TextView
            android:id="@+id/recipe_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="NGN 2,000"
            app:layout_constraintEnd_toStartOf="@+id/imageView2" android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_delete_sweep_black_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp" app:layout_constraintTop_toTopOf="parent" android:id="@+id/imageView2"/>
    
    <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/pizza"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/imageView"/>
</androidx.constraintlayout.widget.ConstraintLayout>